<!DOCTYPE html>
<html>
    <%- include("../partials/head.ejs") %> 
    <body>
        <%- include("../partials/header.ejs") %>
        <main>
            <form enctype="multipart/form-data" id="brandcreate" method="POST" action="/brands/created">
                <h1>Creaci√≥n de la marca</h1>
                <div class="error-div">
                    <% if(backErrors.length > 0){ %> 
                        <% if (backErrors.length > 0) { %>
                            <section class="error-span">
                                <% for( let i = 0; i < backErrors.length; i++ ) { %>
                                    <% let errorA = backErrors[i] %> 
                                    <h2 class="backError"> - <%= errorA.msg %></h2>
                                <% } %>
                            </section>
                        <% } %>
                    <% } %> 
                </div>
                <section class="sect-principal">
                    <h2>Nombre de la marca</h2>
                    <input name="brand" class="field" id="brand" type="text" placeholder="Black & Decker">
                </section>
                <section class="sect-principal">
                    <h2>Logo de la marca</h2>
                    <input name="logo" id="logo" type="file" src="" alt="">
                    <i class="aclaracion">(Solo admite formato .jpg)</i>
                </section>
                <section id="botonera">
                    <button type="submit" id="submitBtn">Enviar</button>
                    <button type="reset" id="reset">Reiniciar campos</button>
                </section>
            </form>
        </main>
        <%- include("../partials/footer.ejs") %>
        <script type="text/javascript" src="/script/brand/create.js"></script>
    </body>
</html>